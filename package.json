{
  "name": "monorepo-no-zaeb",
  "private": true,
  "scripts": {
    "install:all": "npm install",
    "--------------------------------Create commands--------------------------------": "",
    "create:app": "node tools/create-app.js",
    "create:package": "node tools/create-package.js",
    "create:docker-compose": "node tools/create-docker-compose.js",
    "--------------------------------Docker Production--------------------------------": "",
    "docker:up": "docker compose up -d --build",
    "docker:up:attach": "docker compose up --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps",
    "--------------------------------Docker Development--------------------------------": "",
    "docker:up:dev": "docker compose -f docker-compose.dev.yml up --watch --build",
    "docker:down:dev": "docker compose -f docker-compose.dev.yml down",
    "docker:logs:dev": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:ps:dev": "docker compose -f docker-compose.dev.yml ps"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.0",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}