{
  "name": "react-router-ssr",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec npx vite-node src/server.ts",
    "build:client": "tsc && vite build --outDir dist/client",
    "build:server": "tsc && vite build --ssr src/server.ts --outDir dist/server",
    "build": "npm run build:client && npm run build:server",
    "preview": "cross-env NODE_ENV=production node dist/server/server.js",
    "clean": "rm -rf dist",
    "--------------------------------Docker commands--------------------------------": "",
    "docker:build": "node ../../tools/docker-helper.js build Dockerfile react-router-ssr",
    "docker:up": "node ../../tools/docker-helper.js up Dockerfile react-router-ssr 80 -d",
    "docker:up:attach": "node ../../tools/docker-helper.js up Dockerfile react-router-ssr 80",
    "docker:attach": "docker attach react-router-ssr",
    "docker:down": "node ../../tools/docker-helper.js down react-router-ssr",
    "docker:logs": "docker logs -f react-router-ssr"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "nodemon": "^3.0.2",
    "sirv": "^2.0.3",
    "vite": "^5.0.0"
  }
}